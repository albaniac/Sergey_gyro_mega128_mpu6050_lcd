void loop() {
  
  INVBIT(PORTB, 5);

  double Xx, Yy;
  gyro_kalman_get_position(Xx, Yy);  

  char str[16] = {0};
  
  sprintf(str, "X: %d   *", (int)Xx);
  LCD_Write_String(0, 0,  str);
  sprintf(str, "Y: %d   *", (int)Yy);
  LCD_Write_String(1, 0,  str);
  
  buttons_update();

  for (char i = 0; i < buttons_get_count(); i++){
    bool need_println = false;
    if (buttons_was_button_pressed(i)){
      need_println = true;
      Serial.print(i);
      Serial.print(" : ");
    }
    if (need_println){
      Serial.println("");
    }
  }

  delay(2);
}

